@model Tengella.Survey.WebApp.Models.SurveyViewModel

@{
    ViewData["Title"] = "Do Survey";
}

<h1>Survey - in progress</h1>

<form asp-action="DoSurvey" method="post">
    <input hidden asp-for="SurveyObjectId" />
    <input hidden asp-for="SurveyTitle" />
    <input hidden asp-for="SurveyType" />
    <input hidden asp-for="SurveyDescription" />
    
<div>
        @{
            int i = 0;
            int j = 0;
        }
    <h4>SurveyObject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SurveyTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SurveyDescription)
        </dd>

    </dl>
    @foreach (var question in Model.SurveyQuestions!.OrderBy(s => s.QuestionPosition))
        {
            
        <input hidden asp-for="@question.QuestionId" value="@question.QuestionId" />
            <input hidden asp-for="SurveyQuestions" value="@question" />
        <dt class="col-sm-2">
            @Html.DisplayFor(model => question.QuestionPosition)<text>. </text>@Html.DisplayFor(model => question.QuestionName)
        </dt>
        <dd class="col-sm-10">

        </dd>
        @foreach (var choice in question.QuestionChoices!.OrderBy(q => q.ChoicePosition))
        {
                    <div class="form-check">
                    <input type="hidden" asp-for="@Model.SurveyChoices" value="@choice.ChoiceText" />
                    <input type="hidden" asp-for="@Model.SurveyAnswers![i].AnswerValue" value="@choice.ChoiceText" />
                    <input class="form-check-input" id="@(question.QuestionId+choice.ChoiceText)" type="radio" name="@question.QuestionId"  />
                    <label for="@(question.QuestionId + choice.ChoiceText)" class="form-check-label">
                @choice.ChoiceText
            </label>
                    <input type="hidden" asp-for="@Model.SurveyAnswers![i].QuestionId" value="@question.QuestionId" />
                    
                    </div>
                
                j++;
         }

            i++;
     }
    
        
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
        
    
</div>
</form>


