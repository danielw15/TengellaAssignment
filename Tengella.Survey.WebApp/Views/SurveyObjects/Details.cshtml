@model Tengella.Survey.WebApp.Models.SurveyViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SurveyObject</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurveyTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurveyDescription)
        </dd>
        
    </dl>
    @foreach (var question in Model.SurveyQuestions) {
        <dt class="col-sm-2">
            @Html.DisplayFor(model => question.QuestionPosition)<text>. </text>@Html.DisplayFor(model => question.QuestionText)
        </dt>
        <dd class="col-sm-10">
            
        </dd>
        @foreach (var choice in question.QuestionChoices.OrderBy(q => q.ChoicePosition))
        {
            @Html.RadioButtonFor(model => choice.ChoiceText, "Yes")<text> </text>
            @Html.DisplayFor(model => choice.ChoiceText)<text> </text>
            
        }

    }
        </div>
<div>
    <a asp-action="DoSurvey" asp-route-id="@Model.SurveyId">Take Survey</a>
    <a asp-action="Edit" asp-route-id="@Model.SurveyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
