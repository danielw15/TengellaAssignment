@model Tengella.Survey.WebApp.Models.SurveyViewModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="form-container">
            <h1>Survey Details</h1>
            <h4>Survey Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SurveyTitle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SurveyTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SurveyDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SurveyDescription)
                </dd>
            </dl>
        </div>

        @foreach (var question in Model.SurveyQuestions)
        {
            <div class="card">
                <div class="card-header">
                    <strong>@question.QuestionPosition. @question.QuestionName</strong>
                </div>
                <div class="card-body">
                    @foreach (var choice in question.QuestionChoices.OrderBy(q => q.ChoicePosition))
                    {
                        <div class="form-check">
                            @Html.RadioButtonFor(model => choice.ChoiceText, "Yes", new { @class = "form-check-input" })
                            <label class="form-check-label">@choice.ChoiceText</label>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="form-container">
            <a class="btn btn-warning" asp-action="Statistics" asp-route-id="@Model.SurveyObjectId">Show Stats</a>
            <a class="btn btn-primary" asp-action="SendSurvey" asp-route-id="@Model.SurveyObjectId">Email Survey</a>
            <a class="btn btn-secondary" asp-action="CreateSubmission" asp-route-id="@Model.SurveyObjectId">Take Survey</a>
            <a class="btn btn-success" asp-action="AddChoice" asp-route-id="@Model.SurveyObjectId">Add Choice</a>
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.SurveyObjectId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>