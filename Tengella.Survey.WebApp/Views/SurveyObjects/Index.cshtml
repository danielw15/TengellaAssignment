@model IEnumerable<Tengella.Survey.Data.Models.SurveyObject>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #e9ecef;
        }

        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .table thead {
            background-color: #007bff;
            color: white;
        }

        .display-4 {
            color: #007bff;
        }

        .btn-primary,
        .btn-secondary,
        .btn-info,
        .btn-danger {
            color: white;
        }

        .nowrap {
            white-space: nowrap;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="display-4">Survey Management</h1>
            <p>Manage your surveys efficiently and easily.</p>
            <a class="btn btn-primary btn-lg" asp-action="Create">Create New Survey</a>
        </div>

        <div class="table-container">
            <h2 class="mb-4">All Surveys</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.SurveyObjectId)</th>
                        <th>@Html.DisplayNameFor(model => model.SurveyTitle)</th>
                        <th>@Html.DisplayNameFor(model => model.SurveyDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.SurveyType)</th>
                        <th>@Html.DisplayNameFor(model => model.User.Email)</th>
                        <th style="width: 250px;">Actions</th> <!-- Increase the width of the Actions column -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SurveyObjectId)</td>
                            <td>@Html.DisplayFor(modelItem => item.SurveyTitle)</td>
                            <td>@Html.DisplayFor(modelItem => item.SurveyDescription)</td>
                            <td>@Html.DisplayFor(modelItem => item.SurveyType)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                            <td class="nowrap">
                                <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.SurveyObjectId">Edit</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.SurveyObjectId">Details</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.SurveyObjectId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>